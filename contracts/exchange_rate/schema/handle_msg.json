{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HandleMsg",
  "anyOf": [
    {
      "type": "object",
      "required": [
        "Update"
      ],
      "properties": {
        "Update": {
          "type": "object",
          "required": [
            "token"
          ],
          "properties": {
            "token": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "ConfigToken"
      ],
      "properties": {
        "ConfigToken": {
          "type": "object",
          "required": [
            "token"
          ],
          "properties": {
            "epoch_period": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint64",
              "minimum": 0.0
            },
            "exchange_rate": {
              "anyOf": [
                {
                  "$ref": "#/definitions/Decimal256"
                },
                {
                  "type": "null"
                }
              ]
            },
            "token": {
              "$ref": "#/definitions/HumanAddr"
            },
            "weight": {
              "anyOf": [
                {
                  "$ref": "#/definitions/Decimal256"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "AddToken"
      ],
      "properties": {
        "AddToken": {
          "type": "object",
          "required": [
            "base_rate",
            "period",
            "token",
            "weight"
          ],
          "properties": {
            "base_rate": {
              "$ref": "#/definitions/Decimal256"
            },
            "period": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            },
            "token": {
              "$ref": "#/definitions/HumanAddr"
            },
            "weight": {
              "$ref": "#/definitions/Decimal256"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "Start"
      ],
      "properties": {
        "Start": {
          "type": "object",
          "required": [
            "tokens"
          ],
          "properties": {
            "tokens": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/HumanAddr"
              }
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "Stop"
      ],
      "properties": {
        "Stop": {
          "type": "object",
          "required": [
            "tokens"
          ],
          "properties": {
            "tokens": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/HumanAddr"
              }
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "Decimal256": {
      "description": "A fixed-point decimal value with 18 fractional digits, i.e. Decimal256(1_000_000_000_000_000_000) == 1.0 The greatest possible value that can be represented is 115792089237316195423570985008687907853269984665640564039457.584007913129639935 (which is (2^128 - 1) / 10^18)",
      "type": "string"
    },
    "HumanAddr": {
      "type": "string"
    }
  }
}
